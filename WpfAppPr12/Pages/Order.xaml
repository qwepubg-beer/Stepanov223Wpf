<Page x:Class="WpfAppPr12.Pages.Order"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WpfAppPr12.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Order">

    <Grid>

        <StackPanel Margin="370,0,15,0">
            <Label Content="Введите первоначальный взнос"/>
            <TextBox Name="Vznos" TextWrapping="Wrap" Text="" Width="393"/>
            <Label Content="Введите годовую ставку "/>
            <TextBox Name="Stavka" TextWrapping="Wrap" Text="" Width="393"/>
            <Label Content="Введите срок в месяцах "/>
            <TextBox Name="Srok" TextWrapping="Wrap" Text="" Width="393"/>
            <Button Content="Вычислить" Click="Button_Click"/>
            <Label Content="Ваш ежемесячный платеж: "/>
            <TextBox Name="mes" TextWrapping="Wrap" Text="" Width="393"/>
            <Label  Content="Ваша месячная процентная ставка: "/>
            <TextBox Name="procent" TextWrapping="Wrap" Text="" Width="393"/>
            
        </StackPanel>
        <Image HorizontalAlignment="Left" Height="367" VerticalAlignment="Top" Width="350" Margin="5,30,0,0">
            <Image.Source>
                <FormatConvertedBitmap Source="/Перминов.jpg"
DestinationFormat="Gray32Float" />
            </Image.Source>
        </Image>

    </Grid>
</Page>
